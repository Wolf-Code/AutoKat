{
	"name": "devicekat-interface",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build:clean": "node ./scripts/clean-target.js",
		"build:html": "html-minifier --input-dir ./src --output-dir ../data/ --collapse-whitespace --file-ext html --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype --minify-css true --minify-js true",
		"build:scss": "node-sass --output-style compressed src/styles.scss ../data/styles.css",
		"build:js": "node ./scripts/minify-js.js",
		"build": "yarn build:clean && yarn build:scss && yarn build:html && yarn build:js"
	},
